{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "reporter": ["html", "text", "json-summary"],
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "**/*.d.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "coverage/**",
    "e2e/**",
    "node_modules/**",
    ".next/**"
  ],
  "report-dir": "./coverage/e2e"
} 